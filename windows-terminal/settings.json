        //

        // Application-level Keys
        { "command": "closeWindow", "keys": "ctrl+alt+f4" },
        { "command": "toggleFullscreen", "keys": "ctrl+alt+f11" },
        { "command": "toggleFocusMode" },
        { "command": "toggleAlwaysOnTop" },
        { "command": { "action": "openSettings", "target": "settingsFile" }, "keys": "ctrl+alt+," },
